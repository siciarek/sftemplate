<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" style="padding-bottom:0;padding-top:12px;"
               href="{{ url('_homepage') }}">{{ app_name|trans }}</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li{% if app.request.attributes.get('_route') == '_homepage' %} class="active"{% endif %}><a href="{{ url('_homepage') }}">Home</a></li>
                <li{% if app.request.attributes.get('_route') == '_gallery' %} class="active"{% endif %}><a href="{{ url('_gallery') }}">Gallery</a></li>
                <li{% if app.request.attributes.get('_route')|split('_')|length >= 2 and app.request.attributes.get('_route')|split('_')[1] == 'page' and app.request.attributes.get('_route_params')['slug'] is defined and app.request.attributes.get('_route_params')['slug'] == 'contact' %} class="active"{% endif %}>
                    <a href="{{ url('_page_' ~ app.request.locale, {slug: 'contact'}) }}">Contact</a></li>
                <li class="dropdown{% if app.request.attributes.get('_route')|split('_')|length >= 2 and app.request.attributes.get('_route')|split('_')[1] == 'games' %} active{% endif %}">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Games'|trans }}&nbsp;&nbsp;<i class="icon-caret-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('_games_memory') }}">Memory</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Language&nbsp;&nbsp;<i class="icon-caret-down"></i></a>
                    <ul class="dropdown-menu">
                        {% for locale, lang in supported_languages %}
                            <li><a href="{{ url('_locale_change', { locale: locale }) }}"><i
                                            class="icon-check-{{ app.request.locale == locale ? 'sign' : 'empty' }}"></i> {{ lang }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li{% if app.request.attributes.get('_route') == 'fos_user_registration_register' %} class="active"{% endif %}><a
                                href="{{ url('fos_user_registration_register') }}">Register</a></li>
                {% endif %}
            </ul>

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <form style="padding-right:0 !important;" method="post" action="{{ path('fos_user_security_logout') }}" class="navbar-form form-inline pull-right">
                    <span><i class="glyphicon glyphicon-user"></i> {{ app.user }}</span>&nbsp;&nbsp;
                    <button class="btn btn-default" type="submit">
                        <i class="icon-signout"></i>
                        {{ 'Sign out'|trans }}
                    </button>
                </form>
            {% else %}
                <form style="padding-right:0 !important;" method="post" action="{{ path('fos_user_security_check') }}" class="navbar-form form-inline pull-right">
                    <input type="hidden" value="{{ csrf_token("intention") }}" name="_csrf_token">
                    <input class="form-control" name="_username" type="text" placeholder="{{ 'Username'|trans }}">
                    <input class="form-control" name="_password" type="password" placeholder="{{ 'Password'|trans }}">
                    <button type="submit" id="_submit" name="_submit" class="btn btn-default">
                        <i class="icon-signin"></i>
                        {{ 'Sign in'|trans }}
                    </button>
                </form>
            {% endif %}

        </div>
        <!--/.nav-collapse -->
    </div>
</div>
