<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{{ app_name|trans }}{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">

    {% block stylesheets %}{% endblock %}

    <script src="{{ asset('js/jquery.js') }}"></script>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

{% include 'ApplicationMainBundle:Common:menu.html.twig' %}

<div id="wrap">
    <div class="container">

        {% block body %}{% endblock %}

    </div>
</div>

<div id="footer">
    <div class="container">
        <ul class="footer-links">
            <li><a href="{{ url('_page_' ~ app.request.locale, { slug: 'terms' }) }}">{{ 'Terms'|trans }}</a></li>
            <li><a href="{{ url('_page_' ~ app.request.locale, { slug: 'privacy-policy' }) }}">{{ 'Privacy'|trans }}</a></li>
        </ul>
        <p class="text-muted copy-info">
            &copy; {{ 'now'|date('Y') }}. All rights reserved. {{ app_name|trans }}.
        </p>
    </div>
</div>

<script src="{{ asset('js/bootstrap.js') }}"></script>
{% block javascripts %}{% endblock %}

{{ accept_cookies() }}
</body>
</html>
